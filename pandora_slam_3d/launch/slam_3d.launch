<launch>
  <arg name="openni" default="true"/>
  <arg name="kinect" default="true"/>
  <arg name="xtion" default="false"/>
  <arg name="publish_tf" default="false"/>
  <arg name="visual_odometry" default="false"/>
  <arg name="pose_estimation_handler" default="true"/>
  <arg name="matching_octomap_server" default="true"/>

  <include file="$(find pandora_slam_3d)/launch/point_cloud_subsampler.launch">
    <arg name="openni" value="$(arg openni)"/>
    <arg name="kinect" value="$(arg kinect)"/>
    <arg name="xtion" value="$(arg xtion)"/>
    <arg name="publish_tf" value="$(arg publish_tf)"/>
  </include>

  <include if="$(arg visual_odometry)"
    file="$(find pandora_slam_3d)/launch/visual_odometry.launch"/>

  <include if="$(arg pose_estimation_handler)"
    file="$(find pandora_slam_3d)/launch/pose_estimation_handler.launch"/>

  <include if="$(arg matching_octomap_server)"
    file="$(find pandora_slam_3d)/launch/matching_octomap_server.launch"/>
</launch>
